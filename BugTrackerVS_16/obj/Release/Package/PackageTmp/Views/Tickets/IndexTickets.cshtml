@model IEnumerable<BugTrackerVS_16.Models.Tickets>

@{
    Layout = "~/Views/Shared/_DNewLayout.cshtml";

}

<style>
    .my-class {
        color: #ffffff;
    }

    a.my-class {
        color: #ffffff;
    }
</style>

<h2>Project: @ViewBag.ProjectName</h2>

<table class="table table-striped table-bordered" id="dataTable">

    <thead>
        <tr>
            <th>
                @Html.DisplayName("Assignee")
            </th>
            <th>
                @Html.DisplayName("Owner")
            </th>
            <th>
                @Html.DisplayName("Priority")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name, "Priority")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name, "Status")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name, "Type")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>@String.Format("{0:MM/dd/yyyy}", item.Created)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Projects")" class="btn btn-success">Back to Projects</a>
<!--DataTables-->
@section scripts{

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Jquery -->


    <script>
	$(function()	{
		$('#dataTable').dataTable();
	});
    </script>
}
