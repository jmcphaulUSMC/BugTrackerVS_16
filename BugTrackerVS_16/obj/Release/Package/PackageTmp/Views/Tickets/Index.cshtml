@model IEnumerable<BugTrackerVS_16.Models.Tickets>
     
@{
     Layout = "~/Views/Shared/_DNewLayout.cshtml";

} 

<style>
    .my-class
    {
        color:#ffffff;
    }
    a.my-class { color: #ffffff }
</style>
<p>
    <div class="btn btn-danger">
        @Html.ActionLink("Create New ", "Create", new { @class = "my-class" }) 
    </div>

    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager") || User.IsInRole("Developer") || User.IsInRole("Submitter"))
    { 
    <div class="btn btn-success">
        @User.Identity.Name|
        @Html.ActionLink("Assigned Tickets", "IndexAssign", new { @class = "my-class" })
    </div>
    }
</p>
 <table class="table table-striped table-bordered" id="dataTable">

    <thead>
        <tr>
            <th>
                @Html.DisplayName("Assignee")
            </th>
            <th>
                @Html.DisplayName("Owner")
            </th>
            <th>
                @Html.DisplayName("Project")
            </th>
            <th>
                @Html.DisplayName("Priority")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name, "Project")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name, "Priority")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name, "Status")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name, "Type")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
@if (User.IsInRole("Admin"))
{
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
            <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
        </ul>
    </div>
}
else if (item.Project.ManagerId != null && item.Project.ManagerId == ViewBag.CurrentUser)
{
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
            <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
        </ul>
    </div>
}
else if (item.AssignedToUserId != null && ViewBag.CurrentUser == item.AssignedToUserId)
{
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
            <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
        </ul>
    </div>
}
                </td>
            </tr>
        }
    </tbody>

</table>

<!--DataTables-->
@section scripts{

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Jquery -->


    <script>
	$(function()	{
		$('#dataTable').dataTable();
	});
    </script>
}
