@model IEnumerable<BugTrackerVS_16.Models.Tickets>

@{
    Layout = "~/Views/Shared/_DNewLayout.cshtml";

}

<style>
    .my-class {
        color: #ffffff;
    }

    a.my-class {
        color: #ffffff;
    }
</style>
<h2>Project Tickets</h2>
<p style="text-align:right;">
    <a href="@Url.Action("Create","Tickets")" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered" id="dataTable">

    <thead>
        <tr>
            <th>
                @Html.DisplayName("Project")
            </th>
            <th>
                @Html.DisplayName("Ticket Title")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Priority")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
 
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name, "Project")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name, "Priority")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name, "Status")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name, "Type")
                </td>
          
                <td>@String.Format("{0:MM/dd/yyyy}", item.Created)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                Actions
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("ProjectManager"))
                    {
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                Actions
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("Developer"))
                    {
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                Actions
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                            </ul>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!--DataTables-->
@section scripts{

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Jquery -->


    <script>
        $(function () {
            $('#dataTable').dataTable();
        });
    </script>
}
