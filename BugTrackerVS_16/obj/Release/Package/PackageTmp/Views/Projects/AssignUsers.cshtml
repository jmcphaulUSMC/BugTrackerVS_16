@model BugTrackerVS_16.Models.AssignUserToProjectViewModel

@{
    Layout = "~/Views/Shared/_BNewLayout.cshtml";

}
<link href="~/Scripts/lou-multi-select-a0f48de/css/multi-select.css" rel="stylesheet" />
<a href="~/Scripts/lou-multi-select-a0f48de/css/multi-select.dev.css.map">~/Scripts/lou-multi-select-a0f48de/css/multi-select.dev.css.map</a>

<h2>AssignUsers </h2>

<section class="content-wrap ecommerce-products">

    <div class="card">

        <div class="title">
            <!-- Title -->
            <h4>Users</h4>
        </div>

        <div class="content">

            @using (Html.BeginForm("AssignUsers", "Projects", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <div class="form-group">
                        <!-- Begin user select -->
                        @Html.Label("Add User", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.ListBox("SelectedUsers", Model.AddUsers, htmlAttributes: null)
                        </div>
                    </div><!-- /user select -->

                    

                    <button type="submit">Submit</button>

                </div>
            }
        </div><!-- /card -->
    </div>

</section>

@section scripts
{
<script src="~/Scripts/lou-multi-select-a0f48de/js/jquery.multi-select.js"></script>
<script>
        $(document).ready(function () {
            $('select').multiSelect({
                selectionHeader: "Assigned To Project",
                selectableHeader: "Not Assigned To Project"
            });
        })
</script>

}
