@model BugTrackerVS_16.Models.ChangeUserNameViewModel
@{
    ViewBag.Title = "Change User Name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("UserName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change User Name Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldUserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.OldUserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewUserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.NewUserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change UserName" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}