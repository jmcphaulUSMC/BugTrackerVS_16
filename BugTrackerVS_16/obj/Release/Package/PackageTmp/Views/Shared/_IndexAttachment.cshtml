@model BugTrackerVS_16.Models.Tickets

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 style="text-align:center">Ticket Attachments </h2>
    </div>
    @if (ViewBag.AllowedToComment)
    {
        <div class="form-group">
            @using (Html.BeginForm("Create", "TicketAttachments", new { tId = Model.Id }, FormMethod.Post, new { enctype = "Multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.TicketAttachments)
                <div class="form-horizontal">
                    <div class="panel-heading">
                        <label class="control-label">Attachment</label>
                    </div>
                    <input name="image" type="file" class="form-control" id="fileUpload" value="@Model.Id" />

                    @Html.ValidationMessage("image", new { @class = "text-danger" })
                    <br />
                    <label class="control-label">Attachment Description</label>
                    <textarea name="Description" class="form-control" rows="3" placeholder="Please Enter a brief Description"></textarea>
                    <br />
                    <button type="submit" class="btn btn-default">Attach</button>
                </div>
            }
        </div>
    }
    <table class="table table-striped table-bordered" id="dataTable">
        <thead>
            <tr>
                <th>Created</th>
                <th>By</th>
                <th>Attachment</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attach in Model.TicketAttachments)
            {
                <tr>
                    @attach.Created.ToString("d");

                    <td>@attach.User.DisplayName</td>
                    <td><a href="@attach.FileURL">@attach.Created</a></td>
                    <td>@attach.Description</td>

                    @if (attach.FileURL != null)

                    {
                        <td><a href="@attach.FilePath"><img class="img-responsive" src="@attach.FileURL" alt="" /></a>Image</td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>
<!--DataTables-->
@section scripts{

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Jquery -->


    <script>
        $(function () {
            $('#dataTable').dataTable();
        });
    </script>
}




