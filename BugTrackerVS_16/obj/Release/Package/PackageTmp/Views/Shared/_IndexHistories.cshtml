@model BugTrackerVS_16.Models.Tickets

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 style="text-align:center">Ticket History</h2>
    </div>

    @if (Model.TicketHistories.Count == 0)
    {
        @Html.HiddenFor(m => m.TicketHistories)
        <h4 style="float:left">No History</h4>
    }
    else
    {
        <table class="table table-striped table-bordered" id="dataTable">
            <thead>
                <tr>
                    <th>Changed</th>
                    <th>Title</th>
                    <th>Display Name</th>
                    <th>Property</th>
                    <th>Old Value</th>
                    <th>New Value</th>
                    <th>Assignee</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TicketHistories)
                {
                    <tr>
                        <td>@item.Changed</td>
                        <td>@item.Ticket.Title</td>
                        <td>@item.User.UserName</td>
                        <td>@item.Property</td>
                        <td>@item.Oldvalue</td>
                        <td>@item.NewValue</td>
                        <td>@item.Ticket.AssignedToUser.DisplayName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!--DataTables-->
@section scripts{

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- Jquery -->


    <script>
        $(function () {
            $('#dataTable').dataTable();
        });
    </script>
}
