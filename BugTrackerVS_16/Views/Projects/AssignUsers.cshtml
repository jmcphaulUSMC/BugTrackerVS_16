@model BugTrackerVS_16.Models.AssignUserToProjectViewModel

@{
    ViewBag.Title = "AssignUsers";
}

<h2>AssignUsers </h2>

<section class="content-wrap ecommerce-products">

    <div class="card">

        <div class="title">
            <!-- Title -->
            <h4>Users</h4>
        </div>

        <div class="content">

            @using (Html.BeginForm("AssignUsers", "Projects", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id)
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <div class="form-group">
                        <!-- Begin user select -->
                        @Html.Label("Add User", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.ListBox("SelectedUsers", Model.AddUsers, htmlAttributes: null)
                        </div>
                    </div><!-- /user select -->

                    

                    <button type="submit">Submit</button>

                </div>
            }
        </div><!-- /card -->
    </div>

</section>

@section scripts
{
    <script src="~/Scripts/select2/select2.min.js"></script><!-- select2 -->
    <script type="text/javascript">
        $('select').select2();
    </script>

}
