@model IEnumerable<BugTrackerVS_16.Models.Tickets>



@{
    ViewBag.Title = "IndexTwo";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New ", "Create") |


    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager") || User.IsInRole("Developer") || User.IsInRole("Submitter"))
    { <div>
        @Html.ActionLink("Projects", "Index", "Projects")|
        @Html.ActionLink("Assigned Tickets", "IndexAssign")
    </div>
    }

</p>
<table class="table table-striped table-bordered" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Assigned To")
            </th>
            <th>
                @Html.DisplayName("Owner")
            </th>
            <th>
                @Html.DisplayName("Project")
            </th>
            <th>
                @Html.DisplayName("Priority")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name, "Project")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name, "Priority")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketStatus.Name, "Status")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name, "Type")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                   @if (User.IsInRole("Admin"))
                   {
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })|
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                   }
                   else if (User.IsInRole("ProjectManager"))
                   {
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                   }
                   else if (User.IsInRole("Submitter"))
                   {
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                   }
                </td>
            </tr>
        }
    </tbody>

</table>

<!--DataTables-->
@section scripts{

    <script>
	$(function()	{
		$('#dataTable').dataTable();
	});
    </script>
}
